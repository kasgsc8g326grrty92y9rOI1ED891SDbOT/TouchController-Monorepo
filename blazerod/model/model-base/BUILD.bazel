load("//blazerod:properties.bzl", "blazerod_version")
load("//blazerod/model:model_info_jar.bzl", "model_info_jar")
load("//rule:maven_publish.bzl", "kt_jvm_export")

model_info_jar(
    name = "mod_info_json",
    substitutions = {
        "${mod_id}": "blazerod-model-base",
        "${name}": "BlazeRod model base",
        "${description}": "Common declaration of model data.",
    },
)

kt_jvm_export(
    name = "model-base",
    srcs = glob(["**/*.kt"]),
    coordinates = "top.fifthlight.blazerod:model-base:%s" % blazerod_version,
    resource_jars = [
        ":mod_info_json",
        "//blazerod:icon",
    ],
    visibility = ["//visibility:public"],
    deps = [
        "@maven//:it_unimi_dsi_fastutil",
        "@maven//:org_joml_joml",
    ],
)
